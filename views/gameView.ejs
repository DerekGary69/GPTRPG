<div id="messages"></div>

<div id="turnContent">
    <button id="moveToRoom1">Room1</button>
    <button id="moveToRoom2">Room2</button>
    <div id="turnInfo"></div>
    <form data-action="takeTurn" id="turnForm">
        <textarea type="text" required id="playerInput" placeholder="Type your action..."></textarea>
        <button type="submit" disabled id="takeTurnBtn">Take Turn</button>
    </form>
    <button id="recordButton">Hold to Record</button>
</div>




