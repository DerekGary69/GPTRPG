<div id="drawer">
  <div id="roomContent">
    <h2>You are in <%= room.name %></h2>
    <p><%= room.description %></p>
    <p>In this room:</p>
    <ul>
      <% room.players.forEach(player => { %>
        <li><%= player.name %> the <%= player.race %> <%= player.class %></li>
      <% }) %>
    </ul>
    <!-- <p>Exits:</p> -->
    <!-- <ul>
      <% room.exits.forEach(exit => { %>
        <li><%= exit %></li>
      <% }) %>
    </ul> -->
  </div>
    <div id="playerContent">
        <h2><%= player.name %></h2>
        <p><%= player.race %> <%= player.class %></p>
        <p><%= player.description %></p>
    </div>
    
</div>

