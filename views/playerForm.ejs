<button data-action="disconnectPlayer">Back</button>

<h2>Create New Player</h2>
<form data-action="submitPlayerForm">
  <label for="playerName">Name:</label>
  <input type="text" id="playerName" required><br>
  <label for="playerRace">Race:</label>
  <input type="text" id="playerRace" required><br>
  <label for="playerClass">Class:</label>
  <input type="text" id="playerClass" required><br>
  <label for="playerDescription">Description:</label>
  <textarea id="playerDescription" required></textarea><br>
  <label for="ability1">Ability 1:</label>
  <textarea id="ability1" required></textarea><br>
  <label for="ability2">Ability 2:</label>
  <textarea id="ability2" required></textarea><br>
  <label for="ability3">Ability 3:</label>
  <textarea id="ability3" required></textarea><br>
  <button type="submit">Submit</button>
</form>